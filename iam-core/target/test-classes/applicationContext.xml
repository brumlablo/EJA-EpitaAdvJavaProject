<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<bean id="dao" name="dao" class="fr.epita.iam.services.IdentityJDBCDAO" />
	
	<bean id="hibernateDao" name="hibernateDao" class="fr.epita.iam.services.IdentityHibernateJDBCDAO" />

	<bean id="propsConfig"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="test.properties"></property>
	</bean>
	
	<bean id="dataSourceBean"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${jdbc.driver.name}" />
		<property name="url" value="${jdbc.connection.string}" />
		<property name="username" value="${jdbc.connection.user}" />
		<property name="password" value="${jdbc.connection.pwd}" />
	</bean>
	
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSourceBean"/>
		<property name="packagesToScan" value="fr.epita.iam.datamodel"/>
		<property name="hibernateProperties">
			<props>
			 	<prop key="hibernate.dialect">org.hibernate.dialect.DerbyTenSevenDialect</prop>
			 	<prop key="hibernate.hbm2ddl.auto">update</prop>
			</props>
      	</property>
	</bean>


</beans>